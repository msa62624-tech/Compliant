{
  "name": "compliant-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Professional monorepo for Compliant Platform - NestJS + Next.js + Prisma",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:shared": "cd packages/shared && pnpm build",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "turbo run lint",
    "test:all": "bash scripts/local-test.sh",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules && find packages -name 'tsconfig.tsbuildinfo' -delete",
    "db:studio": "cd packages/backend && pnpm db:studio",
    "db:migrate": "cd packages/backend && pnpm db:migrate",
    "db:push": "cd packages/backend && pnpm db:push",
    "backend": "cd packages/backend && pnpm dev",
    "frontend": "cd packages/frontend && pnpm dev"
  },
  "dependencies": {
    "serverless-http": "^3.2.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nuxt/opencollective": "^0.3.2",
    "@prisma/client": "^5.22.0",
    "file-type": "^21.3.0",
    "iterare": "^1.2.1",
    "load-esm": "^1.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.3"
    }
  }
}
